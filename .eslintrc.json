{
  "extends": ["airbnb-typescript", "prettier", "plugin:import/recommended", "plugin:import/typescript"],
  "plugins": ["prettier"],
  "parserOptions": {
    "project": ["tsconfig.json"]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ]
      }
    }
  },
  "rules": {
    "prettier/prettier": [
      "error"
    ],
    "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsFor": ["state"] }]
  }
}